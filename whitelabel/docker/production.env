# ============================================
# DOOZA AI Production Configuration
# Domain: studio.dooza.ai
# ============================================

# --- URLs (IMPORTANT: Set these to your domain) ---
CONSOLE_API_URL=https://studio.dooza.ai
CONSOLE_WEB_URL=https://studio.dooza.ai
SERVICE_API_URL=https://studio.dooza.ai
APP_API_URL=https://studio.dooza.ai
APP_WEB_URL=https://studio.dooza.ai
FILES_URL=

# --- Deployment Mode ---
DEPLOY_ENV=PRODUCTION
DEBUG=false
FLASK_DEBUG=false

# --- Security (GENERATE NEW VALUES!) ---
# Generate with: openssl rand -base64 48
SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_base64_48

# --- Database ---
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_secure_db_password
DB_HOST=db_postgres
DB_PORT=5432
DB_DATABASE=dify

# --- Redis ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_secure_redis_password
REDIS_DB=0
CELERY_BROKER_URL=redis://:CHANGE_ME_secure_redis_password@redis:6379/1

# --- Storage (Local filesystem - change for S3/cloud) ---
STORAGE_TYPE=opendal
OPENDAL_SCHEME=fs
OPENDAL_FS_ROOT=storage

# --- Vector Store ---
VECTOR_STORE=weaviate
WEAVIATE_ENDPOINT=http://weaviate:8080
WEAVIATE_API_KEY=CHANGE_ME_weaviate_key

# --- Nginx/SSL ---
NGINX_SERVER_NAME=studio.dooza.ai
NGINX_HTTPS_ENABLED=true
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_SSL_CERT_FILENAME=fullchain.pem
NGINX_SSL_CERT_KEY_FILENAME=privkey.pem

# --- Let's Encrypt (for auto SSL) ---
NGINX_ENABLE_CERTBOT_CHALLENGE=true
CERTBOT_EMAIL=your-email@dooza.ai
CERTBOT_DOMAIN=studio.dooza.ai

# --- Expose Ports ---
EXPOSE_NGINX_PORT=80
EXPOSE_NGINX_SSL_PORT=443

# --- Disable Telemetry ---
SCARF_NO_ANALYTICS=true
NEXT_TELEMETRY_DISABLED=1

# --- Plugin Marketplace (disable for full white-label) ---
MARKETPLACE_ENABLED=true
MARKETPLACE_API_URL=https://marketplace.dify.ai

# --- Sandbox ---
SANDBOX_API_KEY=CHANGE_ME_sandbox_key
CODE_EXECUTION_API_KEY=CHANGE_ME_sandbox_key

# --- Plugin Daemon ---
PLUGIN_DAEMON_KEY=CHANGE_ME_plugin_daemon_key
PLUGIN_DIFY_INNER_API_KEY=CHANGE_ME_plugin_inner_key
